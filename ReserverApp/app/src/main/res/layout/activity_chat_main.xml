<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.chat.ChatActivityMain">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/chat_main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="#cddb7f"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="#004885">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
         <de.hdodenhof.circleimageview.CircleImageView
             android:id="@+id/ownerProfilePic"
             android:layout_marginStart="10dp"
             android:layout_gravity="center"
             android:src="@drawable/empty_profile"
             android:layout_width="42dp"
             android:layout_height="42dp"/>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_gravity="center"
              android:layout_marginStart="15dp">

              <TextView
                  android:id="@+id/ownerName"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Owner's Name"
                  android:textSize="18sp"
                  android:gravity="center"
                  android:layout_gravity="center"
                  android:textAlignment="center"
                  android:textStyle="bold|normal"
                  android:textColor="@color/white"/>

              <TextView
                  android:id="@+id/ownerStatus"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Online"
                  android:visibility="invisible"
                  android:textSize="14sp"
                  android:textAlignment="textStart"
                  android:textStyle="bold|normal"
                  android:textColor="@color/white"/>

          </LinearLayout>



        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/chat_main_linerLayout01"
        android:layout_below="@+id/chat_main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/chat_main_recyclerView"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/chat_main_send_msg"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/chat_main_linerLayout02"
        android:layout_above="@id/chat_main_linerLayout01"
        android:layout_alignParentBottom="true"
        android:weightSum="2"
        android:background="@drawable/chat_main_bottom_shape"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp"
            android:layout_weight="2"
            android:padding="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="8dp">
            <LinearLayout
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp">

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/chat_main_editText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:hint="Type here...."
                        android:paddingStart="5dp"
                        android:paddingEnd="1dp"
                        android:textStyle="bold"
                        android:background="@android:color/transparent"
                        android:padding="5dp"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/chat_main_attachFileImage"
                    android:layout_weight="3"
                    app:tint="#5C5C5C"
                    android:padding="9dp"
                    android:src="@drawable/ic_baseline_attach_file_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/chat_main_cameraImage"
                    android:layout_weight="3"
                    app:tint="#5C5C5C"
                    android:padding="9dp"
                    android:src="@drawable/ic_baseline_photo_camera_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/chat_main_sendImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginEnd="9dp"
            android:padding="12dp"
            android:src="@drawable/ic_baseline_send_24"
            android:background="@drawable/send_background"
            android:backgroundTint="#838C03"/>

    </LinearLayout>


</RelativeLayout>